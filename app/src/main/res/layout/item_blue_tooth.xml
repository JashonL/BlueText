<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xa100"
    android:paddingStart="@dimen/xa30"
    android:paddingEnd="@dimen/xa30">


    <ImageView
        android:id="@+id/iv_dataloger_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_bluetooth_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xa20"
        android:textColor="@color/title_1"
        android:textSize="@dimen/sizea_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_dataloger_bluetooth"
        app:layout_constraintRight_toLeftOf="@+id/tv_bluetooth_status"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_bluetooth_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xa20"
        android:src="@drawable/dataloger_bluetooth"
        android:textColor="@color/title_1"
        android:textSize="@dimen/sizea_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
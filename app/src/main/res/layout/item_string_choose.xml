<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_onoff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa160"
        android:layout_marginStart="@dimen/xa20"
        android:layout_marginEnd="@dimen/xa20"
        android:foreground="@drawable/card_foreground"
        app:cardBackgroundColor="@color/iphone_background"
        app:cardCornerRadius="@dimen/xa10"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/xa20"
                android:paddingEnd="@dimen/xa20"
                android:textColor="@color/title_bg_white"
                android:textSize="@dimen/sizea_title"
                app:autoSizeMaxTextSize="@dimen/sizea_title"
                app:autoSizeMinTextSize="@dimen/xa10"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_right"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/xa20"
                android:src="@drawable/icon_r"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="@dimen/xa640"
        android:layout_height="@dimen/xa400"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_corner_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/xa120"
            android:layout_height="@dimen/xa120"
            android:src="@drawable/blue_conneted" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xa50"
            android:gravity="center"
            android:text="@string/bluetooth_connet_success"
            android:textColor="@color/btn_color_code_normal"
            android:textSize="@dimen/sizea_header"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xa30"
            android:gravity="center"
            android:paddingLeft="@dimen/xa10"
            android:paddingRight="@dimen/xa10"
            android:text="@string/to_config_pager"
            android:textColor="@color/title_3"
            android:textSize="@dimen/xa28" />


    </LinearLayout>

</RelativeLayout>